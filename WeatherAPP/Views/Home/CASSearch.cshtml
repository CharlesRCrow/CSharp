@{
    ViewData["Title"] = "CASSearch";         
}

<div class="row">
    <h2 class="display-6">@ViewData["searchChem"]</h1>
    <form asp-action="CASSearch" asp-controller="Home">
        <div class="input-group md-form form-control-sm form-2 pl-0">
            <input name="searchQuery" class="form-control my-0 py-1 red-bolder" type="text" placeholder="Chemical Name" aria-label="Search" 
                title="Chemical Name or CAS Number" data-placement="center"/>
            <div class="input-group-append">
                <span class="input-group-text red lighten-3" id="basic-text1">
                    <i class="fas fa-search text-grey"
                    aria-hidden="true">Search</i>
                </span>
            </div>
        </div>
            <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" name="isInactive">
                    <label class="form-check-label" >Active Only: </label>
                </span>    
            </div>        
    </form>
    @if (Model is not null)
    {    
    <table class="table">
        <thead class="thead-inverse">
            <tr>
                <th>Active</th>
                <th>CAS</th>
                <th>Flag</th>
                <th>Chemical Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Ca p in Model)
            {
                <tr>
                    <td>@p.Activity</td>
                    <td>@p.Casrn</td>
                    <td>@p.Flag</td>
                    <td>@p.ChemName</td>
                </tr>
            }
        </tbody>
    </table>
    }
</div>

@section scripts{
    <script>
        $(function () {
            $("#basic-text1").click(function () {
                $("Form").submit();
            })
        });
    </script>
    <script>
        $(document).ready(function(){
            $('input').tooltip();
        });
    </script>
}