@{
    ViewData["Title"] = "WeatherSearch"; 
    //List<Dictionary<string, string>> weatherList = Model.weatherList;
    
    //List<Dictionary<string, string>> weatherList = null;
    //weatherList = model;
    //var weatherList = List<Dictionary<string, string>> Model;
        
}
@ViewBag.MyList


<h1>@ViewData["Title"]</h1>

<div class="row">
    <h1 class="display-2">Weather</h1>
    <form asp-action="Search">
        <div class="input-group md-form form-control-sm form-2 pl-0">
            <input name="searchInput" class="form-control my-0 py-1 red-bolder" type="text" placeholder="Houston, Texas" aria-label="Search" />
            <div class="input-group-append">
                <span class="input-group-text red lighten-3" id="basic-text1">
                    <i class="fas fa-search text-grey"
                    aria-hidden="true">Search</i>
                </span>
            </div>
        </div>
    </form>
    <table class="table">
        <thead class="thead-inverse">
            <tr>
                <th>Period</th>
                <th>Temperature</th>
                <th>Forecast</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.MyList is not null)
            {
                @foreach (var s in ViewBag.MyList)
                {
                    <tr>
                        <td>@s["Name"]</td>
                        <td>@s["Temp"]</td>
                        <td>@s["DetailedForecast"]/td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@section scripts{
    <script>
        $(function () {
            $("#basic-text1").click(function () {
                $("Form").submit();
            })
        });
    </script>
}